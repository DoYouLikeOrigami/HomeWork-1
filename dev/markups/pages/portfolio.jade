block title 
	| Сайт Портфолио

block main-content

	#projectPopup
		.popup
			header.popup__header
				| Добавление проекта
				a.popup__close.b-close
					| Крестик
			form.popup__form.form#addProject(role="form")
				.serverMes.sucessMes
				.serverMes.errorMes
				
				label.popup__label
					header.popup__label-header
						| Название проекта
					input.popup__input.input#projectName(type="text" name="pojectName" placeholder="Введите название" qtip-content="Введи название проекта" qtip-position="right")

				label.popup__label
					header.popup__label-header
						| Картинка проекта
					label.popup__input.popup__file
						span.popup__file-placeholder
							| Загрузите изображение
						input.popup__file-input.input#projectImg(type="file" name="projectImg" qtip-content="Загрузи изображние проекта" qtip-position="right")
						input.popup__file-url(type="hidden" name="fileUrl")

				label.popup__label
					header.popup__label-header
						| URL проекта
					input.popup__input.input#projectURL(type="text" name="projectURL" placeholder="Ссылка на проект" qtip-content="Добавь ссылку на проект" qtip-position="right")

				label.popup__label
					header.popup__label-header
						| Описание
					textarea.popup__input.input.bigInput#projectDescr(name="projectDescr" placeholder="Пара слов о вашем проекте" qtip-content="Опиши проект" qtip-position="right")

				button.popup__submit.submit(type="submit")
